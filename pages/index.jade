script(src="public/mvc/all.js")
script(src="public/routes/all.js")
.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a.brand(href="#") Mapper Maker
      ul.nav
        li.active
          a(href="#") Home
      .nav-collapse.collapse.navbar-responsive-collapse
        form.navbar-search.pull-right
          input.search-query.span2(type="text", placeholder="Search")
.container.paddingPush
  ul.breadcrumb
    li.active Home
section.container
  table.table.table-striped.table-hover
    thead
      tr
        th Mapper
        th Contributions
        th Last Updated
    tbody(data-bind="foreach: mappers")
      tr.actionable(data-bind="click: $root.selectMapper")
        td(data-bind="text: mapperName")
        td(data-bind="text: contributions")
        td(data-bind="text: lastUpdated")